<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @newbook %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <div class="text-right">
        <form name="pullForm">

    <select id="menu" onchange="viewChange();">
        <option value="likes">いいねが多い順</option>
        <option value="PV">閲覧が多い順</option>
        <option value="new">
          <%= link_to "新しい順", books_path(sort: 'created_at DESC'),remote: true %>
        </option>
        <option value="old">古い順</option>
    </select>
</form>
        <%= link_to "新しい順", books_path(sort: 'created_at DESC'),remote: true %> | <%= link_to "古い順", books_path(sort: 'created_at ASC'),remote: true %><br>
        <%= link_to "いいねが多い順", books_path(sort: 'favorite.count DESC'),remote: true %><br>
        <%= link_to "閲覧が多い順", books_path(sort: 'impressions_count DESC'),remote: true %><br>
          <%= select_tag '', options_for_select([['いいねが多い順','likes'],['閲覧が多い順','PV'],['新しい順','new'],['古い順','old']],
          data:{remote: true, url:url_for(action: :index)}), class: "sort-btn" %>
          <input id="sort-btn" type="button" value="クリック" onclick="screenChange()">
      </div>
      <div id="sort"></div>
      <div id="index">
        <%= render 'index', books: @books %>
      </div>
    </div>
  </div>
</div>